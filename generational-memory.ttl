@prefix : <https://example.org/gmo#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <https://schema.org/> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

#################################################################
# Generational Memory Ontology (GMO)
# Version: v0.1 (Initial Public Release)
#
# Purpose
# - Represent people, generations, and recorded memories
# - Support both familial and non-familial social relationships
# - Enable multimodal memory representation (text, audio, photo, video)
#
# Scope & Design Principles
# - Lightweight and conceptually minimal
# - General, atomic primitives over domain-specific specialization
# - Suitable as a core ontology for digital heritage, genealogy,
#   and intergenerational storytelling systems
#
# This ontology intentionally avoids overfitting.
# Validation rules (SHACL), inference rules (SPARQL),
# and application-specific vocabularies are expected
# to live in companion artifacts.
#################################################################

:GenerationalMemoryOntology a owl:Ontology ;
    dc:title "Generational Memory Ontology" ;
    dc:description """
An ontology for representing people, their relationships, and generational memories
expressed in text, voice, photo, or video form.

The ontology is designed as a foundational layer for digital heritage systems,
genealogy platforms, and intergenerational storytelling applications.
""" ;
    owl:versionInfo "v0.1" ;
    dcterms:issued "2026-01-30"^^xsd:date ;
    dc:license "https://creativecommons.org/licenses/by/4.0/" ;
    rdfs:comment """
This initial release defines the core conceptual vocabulary.
Future versions may introduce additional constraints, inference patterns,
or alignments, while preserving backward compatibility.
""" .

#################################################################
# Core Classes
#################################################################

:Agent a owl:Class ;
    rdfs:label "Agent" ;
    rdfs:comment "An actor that can participate in relationships and provenance; e.g., a person or an organization." .

:Person a owl:Class ;
    rdfs:subClassOf foaf:Person, :Agent ;
    rdfs:label "Person" ;
    rdfs:comment "An individual with biographical attributes and associated memories." .

:Organization a owl:Class ;
    rdfs:subClassOf :Agent, schema:Organization ;
    rdfs:label "Organization" ;
    rdfs:comment "A company, school, institution, club, or informal group treated as a social actor." .

:Generation a owl:Class ;
    rdfs:label "Generation" ;
    rdfs:comment "A cohort of people grouped by familial lineage or chronological generation." .

:Memory a owl:Class ;
    rdfs:label "Memory" ;
    rdfs:comment "A recorded memory or experience, independent of media format." .

:MediaObject a owl:Class ;
    rdfs:subClassOf schema:MediaObject ;
    rdfs:label "Media Object" ;
    rdfs:comment "A digital artifact such as a photo, video, audio recording, or scanned document." .

:Place a owl:Class ;
    rdfs:subClassOf schema:Place ;
    rdfs:label "Place" ;
    rdfs:comment "A structured location entity that can be associated with events and memories." .

:Event a owl:Class ;
    rdfs:subClassOf schema:Event ;
    rdfs:label "Event" ;
    rdfs:comment "An occurrence situated in time, and optionally in place, that memories may describe." .

:Relationship a owl:Class ;
    rdfs:label "Relationship" ;
    rdfs:comment """
A reified social relationship instance connecting two or more agents.
This pattern supports both family and non-family relationships
without requiring a distinct property per relationship type.
""" .

:Role a owl:Class ;
    rdfs:subClassOf skos:Concept ;
    rdfs:label "Role" ;
    rdfs:comment """
A conceptual role or relationship type (e.g., Friendship, Employment, Mentor).
Specific vocabularies may be defined externally using SKOS.
""" .

#################################################################
# Object Properties — Kinship (Family Relationships)
#################################################################

:parentOf a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    owl:inverseOf :childOf ;
    rdfs:label "parent of" ;
    rdfs:comment "Indicates a direct biological or adoptive parent-child relationship." .

:childOf a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    rdfs:label "child of" ;
    rdfs:comment "Inverse of parentOf." .

:siblingOf a owl:ObjectProperty, owl:SymmetricProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    rdfs:label "sibling of" ;
    rdfs:comment "Denotes a sibling relationship." .

:spouseOf a owl:ObjectProperty, owl:SymmetricProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    rdfs:label "spouse of" ;
    rdfs:comment "Represents a marital or long-term partner relationship." .

:ancestorOf a owl:ObjectProperty, owl:TransitiveProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    owl:inverseOf :descendantOf ;
    rdfs:label "ancestor of" ;
    rdfs:comment "A transitive ancestral relationship." .

:descendantOf a owl:ObjectProperty, owl:TransitiveProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    rdfs:label "descendant of" ;
    rdfs:comment "A transitive descendant relationship." .

#################################################################
# Object Properties — General Social Relationships
#################################################################

:hasRelationship a owl:ObjectProperty ;
    rdfs:domain :Agent ;
    rdfs:range :Relationship ;
    rdfs:label "has relationship" ;
    rdfs:comment "Links an agent to a relationship instance they participate in." .

:hasParticipant a owl:ObjectProperty ;
    rdfs:domain :Relationship ;
    rdfs:range :Agent ;
    rdfs:label "has participant" ;
    rdfs:comment "Associates participants with a relationship." .

:relationshipType a owl:ObjectProperty ;
    rdfs:domain :Relationship ;
    rdfs:range :Role ;
    rdfs:label "relationship type" ;
    rdfs:comment "Classifies a relationship using a conceptual role or type." .

:participantRole a owl:ObjectProperty ;
    rdfs:domain :Relationship ;
    rdfs:range :Role ;
    rdfs:label "participant role" ;
    rdfs:comment "Optional role information for participants." .

#################################################################
# Object Properties — Memories, Generations, Media
#################################################################

:recordedBy a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Agent ;
    rdfs:label "recorded by" ;
    rdfs:comment "The agent who created or recorded the memory." .

:aboutPerson a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Person ;
    rdfs:label "about person" .

:aboutOrganization a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Organization ;
    rdfs:label "about organization" .

:aboutEvent a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Event ;
    rdfs:label "about event" .

:aboutPlace a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Place ;
    rdfs:label "about place" .

:belongsToGeneration a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Generation ;
    rdfs:label "belongs to generation" .

:includesPerson a owl:ObjectProperty ;
    rdfs:domain :Generation ;
    rdfs:range :Person ;
    rdfs:label "includes person" .

:memberOfGeneration a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Generation ;
    owl:inverseOf :includesPerson ;
    rdfs:label "member of generation" .

:followsGeneration a owl:ObjectProperty ;
    rdfs:domain :Generation ;
    rdfs:range :Generation ;
    rdfs:label "follows generation" .

:hasMedia a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :MediaObject ;
    rdfs:label "has media" .

:references a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Memory ;
    rdfs:label "references" .

:inspiredBy a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range :Memory ;
    rdfs:label "inspired by" .

#################################################################
# Data Properties (unchanged, minimal, self-explanatory)
#################################################################

:name a owl:DatatypeProperty ; rdfs:domain :Person ; rdfs:range xsd:string .
:birthDate a owl:DatatypeProperty ; rdfs:domain :Person ; rdfs:range xsd:date .
:deathDate a owl:DatatypeProperty ; rdfs:domain :Person ; rdfs:range xsd:date .
:biography a owl:DatatypeProperty ; rdfs:domain :Person ; rdfs:range xsd:string .

:fileURI a owl:DatatypeProperty ; rdfs:domain :MediaObject ; rdfs:range xsd:anyURI .
:mediaType a owl:DatatypeProperty ; rdfs:domain :MediaObject ; rdfs:range xsd:string .

:dateOfEvent a owl:DatatypeProperty ; rdfs:domain :Memory ; rdfs:range xsd:date .
:dateRecorded a owl:DatatypeProperty ; rdfs:domain :Memory ; rdfs:range xsd:date .
:contentText a owl:DatatypeProperty ; rdfs:domain :Memory ; rdfs:range xsd:string .
:location a owl:DatatypeProperty ; rdfs:domain :Memory ; rdfs:range xsd:string .
:tags a owl:DatatypeProperty ; rdfs:domain :Memory ; rdfs:range xsd:string .

:relationshipStart a owl:DatatypeProperty ; rdfs:domain :Relationship ; rdfs:range xsd:date .
:relationshipEnd a owl:DatatypeProperty ; rdfs:domain :Relationship ; rdfs:range xsd:date .
:timeStart a owl:DatatypeProperty ; rdfs:domain :Event ; rdfs:range xsd:date .
:timeEnd a owl:DatatypeProperty ; rdfs:domain :Event ; rdfs:range xsd:date .

:source a owl:DatatypeProperty ; rdfs:domain :Memory ; rdfs:range xsd:anyURI .
:confidence a owl:DatatypeProperty ; rdfs:domain :Memory ; rdfs:range xsd:decimal .

:hasTag a owl:ObjectProperty ;
    rdfs:domain :Memory ;
    rdfs:range skos:Concept .
